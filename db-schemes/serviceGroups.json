{
  "title": "Группы услуг",
  "properties": [
    {
      "title": "Название",
      "article": "title",
      "type": "varchar(75)",
      "default": null,
      "is_required": "Y"
    },
    {
      "title": "Родительская группа",
      "article": "parent_id",
      "type": "int",
      "default": null,
      "is_required": "N"
    },
    {
      "title": "Общее время выполнения (мин)",
      "article": "time",
      "type": "int",
      "default": null,
      "is_required": "Y"
    },
    {
      "title": "Активность (Y/N)",
      "article": "is_active",
      "type": "char(1)",
      "default": "Y",
      "is_required": "N"
    }
  ],
  "action_buttons": [{
    "type": "href",
    "settings": {
      "title": "Изменить",
      "page": ["serviceGroups/update/", ":id"],
      "icon": "gear",
      "background": "dark"
    }
  }, {
    "type": "script",
    "settings": {
      "title": "Удалить",
      "background": "dark",
      "icon": "trash",
      "object": "serviceGroups",
      "command": "remove",
      "data": {
        "id": ":id"
      }
    }
  }]
}